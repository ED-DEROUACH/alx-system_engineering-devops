#!/bin/bash

# Prompt user for the domain name
read -p "Enter the domain name: " domain

# Perform DNS query using dig
echo -e "\n; <<>> DiG 9.16.1-Ubuntu <<>> $domain"
dig_result=$(dig $domain)

# Print the dig result
echo -e "$dig_result"

# Verify the registrar using WHOIS
echo -e "\nVerifying Registrar Information:"
whois_result=$(whois $domain)

# Print the WHOIS result
echo -e "$whois_result"

