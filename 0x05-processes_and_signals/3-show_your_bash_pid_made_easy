#!/usr/bin/env bash
# This script displays the PID and process name of processes containing the word "bash."

# Find PIDs of processes containing the word "bash"
pids=$(pgrep -f "bash")

# Loop through the PIDs and display them with the process name
for pid in $pids; do
    process_name=$(ps -p $pid -o comm=)
    echo "$pid $process_name"
done
