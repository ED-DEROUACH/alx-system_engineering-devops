#!/bin/bash

# Define the location of the manage_my_process script
MANAGE_SCRIPT="/path/to/manage_my_process"

# Define the PID file location
PID_FILE="/var/run/my_process.pid"

start() {
  if [ -f "$PID_FILE" ]; then
    echo "manage_my_process is already running."
    return 1
  fi
  nohup $MANAGE_SCRIPT start > /dev/null 2>&1 &
  echo $! > "$PID_FILE"
  echo "manage_my_process started"
}

stop() {
  if [ -f "$PID_FILE" ]; then
    kill $(cat "$PID_FILE")
    rm -f "$PID_FILE"
    echo "manage_my_process stopped"
  else
    echo "manage_my_process is not running."
  fi
}

restart() {
  stop
  start
  echo "manage_my_process restarted"
}

case "$1" in
  start)
    start
    ;;
  stop)
    stop
    ;;
  restart)
    restart
    ;;
  *)
    echo "Usage: $0 {start|stop|restart}"
    exit 1
    ;;
esac
